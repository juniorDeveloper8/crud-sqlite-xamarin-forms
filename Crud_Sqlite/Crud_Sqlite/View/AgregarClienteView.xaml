<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crud_Sqlite.View.AgregarClienteView"
             Title="Agregar Cliente">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Agregar Nuevo Cliente" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20" />

            <Entry Placeholder="Nombre" x:Name="NombreEntry" Margin="0,0,0,10" />
            <Entry Placeholder="Apellido" x:Name="ApellidoEntry" Margin="0,0,0,10" />
            <Entry Placeholder="Correo electrónico" x:Name="CorreoEntry" Margin="0,0,0,10" />
            <Entry Placeholder="Contraseña" x:Name="ContraseñaEntry" IsPassword="True" Margin="0,0,0,10" />

            <Button Text="Agregar Cliente" Clicked="AgregarCliente_Clicked" BackgroundColor="#007bff" TextColor="White" CornerRadius="5" Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
