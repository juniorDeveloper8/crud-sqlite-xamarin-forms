<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crud_Sqlite.View.LoginView"
             Title="Iniciar Sesión">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Label Text="Iniciar Sesión" FontSize="Large" HorizontalTextAlignment="Center" Margin="0,0,0,20"/>

            <Entry Placeholder="Correo electrónico" x:Name="CorreoEntry" Keyboard="Email" Margin="0,0,0,10"/>
            <Entry Placeholder="Contraseña" x:Name="PswEntry" IsPassword="True" Margin="0,0,0,20"/>

            <Button Text="Iniciar Sesión" Command="{Binding IniciarSesionCommand}" BackgroundColor="#007bff" TextColor="White" CornerRadius="5"/>


            <ActivityIndicator x:Name="ActivityIndicator" IsVisible="False" Color="#007bff" Margin="0,20,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
